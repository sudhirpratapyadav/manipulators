{
  "name": "ROS 2 Development Container",
  "privileged": true,
  "remoteUser": "robot",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "USERNAME": "robot"
    }
  },
  "workspaceFolder": "/home/robot/manipulators",
  "workspaceMount": "source=${localWorkspaceFolder},target=/home/robot/manipulators,type=bind",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-themes",
        "twxs.cmake",
        "donjayamanne.python-extension-pack",
        "eamodio.gitlens",
        "ms-iot.vscode-ros"
      ]
    }
  },
  "containerEnv": {
    "DISPLAY": "unix:0",
    "ROS_AUTOMATIC_DISCOVERY_RANGE": "LOCALHOST",
    "ROS_DOMAIN_ID": "42"
  },
  "runArgs": [
    "--net=host",
    "-e",
    "DISPLAY=${env:DISPLAY}"
    // "-p",
    // "4000:4000/udp",
  ],
  // "forwardPorts": [4000],
  // "mounts": [
  //   "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
  //   "source=/dev/dri,target=/dev/dri,type=bind,consistency=cached",
  //   "source=${localWorkspaceFolder}/../cache/iron/build,target=/home/ros2_ws/build,type=bind",
  //   "source=${localWorkspaceFolder}/../cache/iron/install,target=/home/ros2_ws/install,type=bind",
  //   "source=${localWorkspaceFolder}/../cache/iron/log,target=/home/ros2_ws/log,type=bind"
  // ],
  "postCreateCommand": "sudo rosdep update && sudo rosdep install --from-paths /home/robot/manipulators/ros2_ws/src --ignore-src -y && sudo chown -R $(whoami) /home/robot/manipulators/ros2_ws/ && cd /home/robot/manipulators/ros2_ws/ && rm -rf build/ install/ log/ && colcon build --symlink-install"
}
