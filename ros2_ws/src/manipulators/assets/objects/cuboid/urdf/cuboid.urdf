<?xml version="1.0"?>
<!--
Parameterized cuboid obstacle URDF
This is a template - size and color parameters need to be set when loading
-->
<robot name="cuboid">
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>  <!-- Default size, override with parameters -->
      </geometry>
      <material name="cuboid_color">
        <color rgba="0.8 0.8 0.8 1.0"/>  <!-- Default color, override with parameters -->
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>  <!-- Same as visual -->
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.00167" ixy="0" ixz="0" iyy="0.00167" iyz="0" izz="0.00167"/>
    </inertial>
  </link>
</robot>
